

#include <p18f46k22.h>

void ToDelay (void);

void main(void)

{

TRISB=0;

T0CON = 0x08;

PORTB=0;



while(1)

{

PORTBbits.RB1 = 1;

ToDelay();

PORTBbits.RB1 = 0;

ToDelay();

}

}


ToDelay()

{

TMR0H = 0x00;

TMR0L = 0x1E;

T0CONbits.TMR0ON = 1;

while (INTCONbits.TMR0IF == 0);

T0CONbits.TMR0ON = 0;

INTCONbits.TMR0IF = 0;

}
void 
